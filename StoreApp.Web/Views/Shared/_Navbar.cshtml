@using Microsoft.AspNetCore.Identity
@using StoreApp.Data.Concrete
@inject SignInManager<AppUser> SignInManager
    @inject UserManager<AppUser> UserManager

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg py-3 sticky-top">
            <div class="container">

                <a class="navbar-brand fw-bold fs-4 d-flex align-items-center" href="/">
                    <i class="bi bi-shop-window me-2 text-warning"></i> <span style="letter-spacing: 1px;">STORE
                        CORE</span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse"
                    data-bs-target="#toggleContent" aria-controls="toggleContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="toggleContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item">
                            <a href="/" class="nav-link text-white hover-underline-animation px-3">
                                <i class="bi bi-house-door-fill me-1 opacity-75"></i> Anasayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link text-white hover-underline-animation px-3">
                                <i class="bi bi-grid-fill me-1 opacity-75"></i> Ürünler
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center gap-3">

                        <li class="nav-item">
                            <div class="d-flex align-items-center">
                                <vc:cart-summary />
                            </div>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                        // 1. ADMİN BUTONU (Sadece Admin Görür)
                        @if (User.IsInRole("Admin"))
                        {
                        <li class="nav-item">
                            <a class="btn btn-danger btn-sm rounded-pill fw-bold px-3 me-2" asp-area="Admin"
                                asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Admin
                            </a>
                        </li>
                        }

                        // 2. KULLANICI ADI (Sadece Bilgi)
                        <li class="nav-item">
                            <span class="nav-link text-warning fw-bold" style="cursor: default;">
                                <i class="bi bi-person-circle me-1"></i> @User.Identity?.Name
                            </span>
                        </li>

                        // 3. ÇIKIŞ BUTONU
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm rounded-pill fw-bold px-3">
                                    <i class="bi bi-box-arrow-right"></i> Çıkış
                                </button>
                            </form>
                        </li>
                        }
                        else
                        {
                        // --- MİSAFİR KULLANICI ---
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login"
                                class="btn btn-outline-light btn-sm px-3 rounded-pill me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Register"
                                class="btn btn-warning btn-sm px-3 rounded-pill text-dark fw-bold">
                                <i class="bi bi-person-plus-fill me-1"></i> Kayıt Ol
                            </a>
                        </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>

        <style>
            .nav-link {
                transition: all 0.3s ease;
                position: relative;
            }

            .nav-link:hover {
                color: #ffc107 !important;
                transform: translateY(-2px);
            }

            .navbar {
                backdrop-filter: blur(10px);
            }
        </style>