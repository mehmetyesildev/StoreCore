@model OrderModel

<div class="container">
    <div class="container mt-4">
        <div class="d-flex align-items-center border-bottom pb-3 mb-4">
            <i class="bi bi-credit-card-2-front text-primary fs-2 me-3"></i>
    
            <div>
                <h2 class="h3 mb-0 fw-bold">Ödeme Ekranı</h2>
                <small class="text-muted">Lütfen teslimat ve ödeme bilgilerinizi eksiksiz doldurunuz.</small>
            </div>
        </div>
    <div class="row g-5">

        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Sipariş Özeti</span>
                <span class="badge bg-primary rounded-pill">@Model.Cart.Items.Count</span>
            </h4>
            <ul class="list-group mb-3 shadow-sm">
                @foreach (var item in Model.Cart.Items)
                {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">@item.Product.Name</h6>
                        <small class="text-muted">Adet: @item.Quantity</small>
                    </div>
                    <span class="text-muted">@((item.Product.Price * item.Quantity).ToString("c2"))</span>
                </li>
                }

                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Toplam Tutar</h6>
                    </div>
                    <span class="fw-bold text-success">@Model.Cart.CalculateTotal().ToString("c2")</span>
                </li>
            </ul>
        </div>

        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3"><i class="bi bi-person-lines-fill me-2"></i>Teslimat Bilgileri</h4>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form method="post" asp-action="Checkout" class="needs-validation">

                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="@Model.Name" class="form-label">Ad Soyad</label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Örn: Mehmet Yeşil" />
                    </div>

                    <div class="col-12">
                        <label asp-for="@Model.Email" class="form-label">E-Posta Adresi</label>
                        <input asp-for="@Model.Email" type="email" class="form-control" placeholder="ornek@mail.com" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.City" class="form-label">Şehir</label>
                        <input asp-for="@Model.City" class="form-control" placeholder="Örn: İstanbul" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.Phone" class="form-label">Telefon</label>
                        <input asp-for="@Model.Phone" class="form-control" placeholder="05XX XXX XX XX" />
                    </div>

                    <div class="col-12">
                        <label asp-for="@Model.AddressLine" class="form-label">Açık Adres</label>
                        <textarea asp-for="@Model.AddressLine" class="form-control" rows="3"
                            placeholder="Mahalle, Cadde, Sokak, Kapı No..."></textarea>
                    </div>
                </div>

                <hr class="my-4">

                <h4 class="mb-3"><i class="bi bi-wallet2 me-2"></i>Ödeme Bilgileri</h4>

                <div class="row gy-3">
                    <div class="col-md-6">
                        <label asp-for="@Model.CartName" class="form-label">Kart Üzerindeki İsim</label>
                        <input asp-for="@Model.CartName" class="form-control" placeholder="Kartın ön yüzündeki isim" />
                        <small class="text-muted">Kart üzerinde yazdığı gibi giriniz</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@Model.CartNumber" class="form-label">Kart Numarası</label>
                        <input asp-for="@Model.CartNumber" class="form-control" placeholder="0000 0000 0000 0000" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="@Model.ExpiretionMonth" class="form-label">Ay</label>
                        <input asp-for="@Model.ExpiretionMonth" class="form-control" placeholder="MM" maxlength="2" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="@Model.ExpiretionYear" class="form-label">Yıl</label>
                        <input asp-for="@Model.ExpiretionYear" class="form-control" placeholder="YY" maxlength="2" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="@Model.Cvc" class="form-label">CVC</label>
                        <input asp-for="@Model.Cvc" class="form-control" placeholder="***" maxlength="3" />
                        <small class="text-muted">Arka yüzdeki 3 hane</small>
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">
                    <i class="bi bi-check-circle me-2"></i> Siparişi Tamamla
                </button>
            </form>
        </div>
    </div>
</div>