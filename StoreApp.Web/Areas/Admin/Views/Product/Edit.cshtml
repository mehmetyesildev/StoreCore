@model StoreApp.Web.Models.ProductViewModel

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Ürün Düzenle</h4>
        </div>
        <div class="card-body">

            <div asp-validation-summary="All" class="text-danger"></div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="image" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ürün Adı</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Fiyat</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Kategoriler</label>
                    <div class="card p-2">
                        @foreach (var cat in ViewBag.Categories as List<StoreApp.Data.Concrete.Category>)
                            {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedCategoryIds"
                                    value="@cat.Id" id="category_@cat.Id" @(Model.SelectedCategoryIds.Contains(cat.Id)
                                    ? "checked" : "" )>

                                <label class="form-check-label" for="category_@cat.Id">
                                    @cat.Name
                                </label>
                            </div>
                            }
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ürün Resmi</label>

                    <div class="mb-2">
                        <img src="@Model.image" width="80" class="border rounded" />
                    </div>

                    <input type="file" name="file" class="form-control" accept="image/*" />
                </div>

                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>

            </form>
        </div>
    </div>
</div>